{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to PostgreSQL Backend",
            "type": "cppdbg",
            "request": "attach",
            "program": "/usr/lib/postgresql/9.6/bin/postgres",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "/workspace": "${workspaceFolder}"
            },
            "logging": {
                "engineLogging": false,
                "trace": false,
                "traceResponse": false
            }
        },
        {
            "name": "Attach to Specific PID",
            "type": "cppdbg",
            "request": "attach",
            "program": "/usr/lib/postgresql/9.6/bin/postgres",
            "processId": "${input:processPid}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "/workspace": "${workspaceFolder}"
            }
        }
    ],
    "inputs": [
        {
            "id": "processPid",
            "type": "promptString",
            "description": "Enter the PostgreSQL backend process ID (find with: ps aux | grep postgres)",
            "default": ""
        }
    ]
}
